<div class="row ">
  {{#each notes}}
  <div class="col-md-3 py-4">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }}     <a href="/edit/{{_id}}"><i class="fas fa-edit" style="color: gray"></i></a>
        </h4>
        <p>{{ description }} </p>
        <p>{{ date }}</p>
        <!--DELETE REQUEST-->
        <form action="/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-outline-info btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto mt-4">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are not Notes yet.</p>
      <a href="/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>
